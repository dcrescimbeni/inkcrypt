{
  "$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "globals": ["console"],
    "formatter": {
      "trailingCommas": "es5",
      "quoteStyle": "single",
      "jsxQuoteStyle": "single"
    }
  },
  "files": {
    "includes": ["src/**/*", "test/**/*", "*.ts", "*.tsx", "*.js", "*.jsx"]
  }
}
